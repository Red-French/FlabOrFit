<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.redfrench.flaborfit.MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#2ca5f5"
        android:background="@drawable/rounded_corners"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/weightBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/weight"/>

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView2"
            android:textSize="40dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="Weight Lifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignBottom="@+id/imageView"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="3dp"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="10 sets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView5"
            android:gravity="right"
            android:textSize="22dp"
            android:textColor="@android:color/background_light"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#916bcd"
        android:background="@drawable/rounded_corners"
        android:layout_weight="1"
        android:id="@+id/yogaBtn">

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignBottom="@+id/imageView"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="Namaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="3dp"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView7"
            android:textSize="40dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="1 hour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView6"
            android:gravity="right"
            android:textSize="22dp"
            android:textColor="@android:color/background_light"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/lotus"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#52ad56"
        android:background="@drawable/rounded_corners"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/cardioBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/heart"/>

        <TextView
            android:text="5 miles"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView10"
            android:gravity="right"
            android:textSize="22dp"
            android:textColor="@android:color/background_light"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"/>

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignBottom="@+id/imageView"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="Run like crazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="3dp"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="22%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView13"
            android:textSize="40dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"/>
    </RelativeLayout>
</LinearLayout>
